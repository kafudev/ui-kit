{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "hooks": {
    "before:bump": "npx auto-changelog -p"
  },
  "npm": {
    "skipChecks": true,
    "publish": true
  },
  "github": {
    "release": true,
    "web": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md"
    }
  }
}
