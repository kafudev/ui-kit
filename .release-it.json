{
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  },
  "npm": {
    "skipChecks": true,
    "publish": true
  },
  "github": {
    "release": true
  }
}
